<%= render 'shared/errors', obj: @category %>
<div class='row'>
  <div class='col-xs-12'>
   <%= form_for(@category, :html => {class: "form-horizontal", role: "form" }) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2" >
         <%= f.label :Name %>
      </div>
      <div class='col-sm-8' >
         <%= f.text_field :name, class: "form-control", autofocus: true, placeholder: "enter category name"  %>
      </div>
    </div>
    
    <div class="form-group">
       <div class="col-sm-offset-2 col-sm-10" >
         <%= f.submit   class: 'btn btn-primary btn-lg' %>
        </div>
    </div>    
<% end %>
</div>
</div>
<div class="col-sm-offset-4 col-xs-10" >
   [ <%= link_to "Cancel request and return to articles Listing", articles_path %> ]
</div> 